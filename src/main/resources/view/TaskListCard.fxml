<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <Circle fill="#0076dd" radius="5.0" stroke="BLACK" strokeType="INSIDE" translateX="352.0" translateY="49.0" />
      <Circle fill="#0076dd" radius="5.0" stroke="BLACK" strokeType="INSIDE" translateX="35.0" translateY="47.5" />
      <Circle fill="#0076dd" radius="5.0" stroke="BLACK" strokeType="INSIDE" translateX="180.0" translateY="48.0" />
        <GridPane prefHeight="105.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" minHeight="105.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>
                    <padding>
                        <Insets bottom="5" left="15" right="5" top="5" />
                    </padding>

                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <HBox>
                                   <children>
                                       <Label fx:id="id" styleClass="cell_big_label" />
                                       <Label fx:id="taskName" styleClass="cell_big_label" text="\$first" underline="true" />
                                   </children>
                                </HBox>
                            </children>
                        </HBox>
                        <FlowPane fx:id="tags" />
                        <Label fx:id="taskDate" styleClass="cell_small_label" text="\$taskDate" translateX="15.0" translateY="10.0" />
                        <Label fx:id="taskTime" styleClass="cell_small_label" text="\$taskTime" translateX="170.0" translateY="-3.0" />
                        <Label fx:id="taskDescription" styleClass="cell_small_label" text="\$taskDescription" translateX="320.0" translateY="-16.0" wrapText="true" />
                        <Label fx:id="taskStatus" styleClass="cell_small_label" text="\$taskStatus" translateY="-5.0" />
                    </children>
                </VBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
